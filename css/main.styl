@font-face
  font-family 'AmericanCaptain'
  src url('/fonts/American Captain.ttf') format('truetype')
  font-weight normal
  font-style normal

body
  margin 0
  padding 0
  background-color #333

.container-fluid
  width 80%
  margin 7% auto
  background-color #fff

.header
  padding 50px 30px 25px 30px
  min-height 300px
  background-image url('../img/East_Village_Second_Avenue.jpg')
  background-size auto 100%
  font-family AmericanCaptain
  color #fff

  h1
    letter-spacing 2px
    font-size 48px

  h3
    letter-spacing 3px
    text-align right
    margin-top 40px
  h4
    letter-spacing 2px
    text-align right

a.email
  color #fff
  &:hover
    text-decoration underline

.main
  padding 20px

  h2
    font-size 20px
    padding-left 20px
    margin-top 0
    line-height 35px
    margin-bottom 10px
    font-style italic

  h4
    font-size 16px

  .bar
    padding 5px

    &:nth-child(even)
      background-color #eee

ul.blogs
  list-style none
  padding-left 5px

  li:nth-child(even)
    background-color #eee