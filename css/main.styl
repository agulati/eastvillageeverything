@font-face
  font-family 'AmericanCaptain'
  src url('/fonts/American Captain.ttf') format('truetype')
  font-weight normal
  font-style normal

body
  margin 0
  padding 0
  background-color #333

.container-fluid
  width 80%
  margin 7% auto
  background-color #fff

.header
  padding 50px 30px 25px 30px
  min-height 300px
  background-image url('../img/East_Village_Second_Avenue.jpg')
  background-size auto 100%
  font-family AmericanCaptain
  color #fff

  h1
    letter-spacing 2px
    font-size 48px

  h3
    letter-spacing 3px
    text-align right
    margin-top 40px
  h4
    letter-spacing 2px
    text-align right

.main
  padding 20px

  .bar
    padding 5px

    &:nth-child(even)
      background-color #eee